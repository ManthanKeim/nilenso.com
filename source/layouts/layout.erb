<!DOCTYPE html>
<html encoding="utf-8">
  <head>
    <title>Nilenso Software <%= title_of_the_page_if_it_needs_to_be_shown %></title>

    <!-- seo meta -->
    <meta name='keywords'
    content='Nilenso, Ruby, Ruby On Rails, Rails Outsourcing, Offshoring, India, Bangalore, Agile, Open Source Software, TDD, Test Driven Development BDD, Continuous Integration, DevOps, C42, C42 Engineering, Software Consulting'/>
    <meta name='description'
    content="Nilenso (formerly the consulting arm of C42 Engineering) is an employee-owned software cooperative. We ship beautiful, fully-tested applications for you every day."/>

    <!-- facebook meta -->
    <meta property="og:title" content="Nilenso Software"/>
    <meta property="og:url" content="http://nilenso.com"/>
    <meta property="og:site_name" content="Nilenso Software"/>
    <meta property="og:type" content="website"/>
    <meta property="og:image" content="http://nilenso.com/nilenso-200.png"/>
    <meta property="og:description"
    content="Nilenso (formerly the consulting arm of C42 Engineering) is an employee-owned software cooperative. We ship beautiful, fully-tested applications for you every day."/>

    <!-- twitter meta -->
    <meta name="twitter:card" content="summary">
    <meta name="twitter:site" content="@nilenso">
    <meta name="twitter:title" content="Nilenso Software">
    <meta name="twitter:image" content="http://nilenso.com/nilenso-200.png">
    <meta name="twitter:description"
    content="Nilenso (formerly the consulting arm of C42 Engineering) is an employee-owned software cooperative. We ship beautiful, fully-tested applications for you every day.">

    <!-- mobile-friendly -->
    <meta name="HandheldFriendly" content="True">
    <meta name="MobileOptimized" content="320">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1"/>
    <meta name="apple-mobile-web-app-capable" content="yes"/>

    <!-- Typekit fonts -->
    <script type="text/javascript" src="//use.typekit.net/xgt4lgm.js"></script>
    <script type="text/javascript">try{Typekit.load();}catch(e){}</script>

    <link rel='shortcut icon' type='image/x-icon' href='favicon.png'/>

    <!-- site scripts and styles -->
    <%= stylesheet_link_tag "reset", "font-awesome", "nilenso", "people", "portfolio", "jquery.navobile", "scrollnav" %>
    <%= javascript_include_tag  "all" %>
  </head>

  <body>
    <header class="nilenso-header">
      <div class="header-logo <%= header_visibility_depending_on_homepage_or_not %>">
        <img class="header-logo-image" src="/nilenso-200.png" />
        <a class="header-link logo-name" href="http://nilenso.com">nilenso</a>
      </div>
      <div class="page-links">
        <a class="header-link page-link <%= active?('Home') %>" href="/">Home</a>
        <a class="header-link page-link <%= active?('Blog') %>" href="http://blog.nilenso.com">Blog</a>
        <a class="header-link page-link <%= active?('People') %>" href="people.html">People</a>
        <a class="header-link page-link <%= active?('Portfolio') %>" href="portfolio.html">Portfolio</a>
      </div>
      <i class="show-navigation page-link navobile-mobile-only icon-list"></i>
    </header>

    <div class="content">
      <!-- Render partial -->
      <%= yield %>

      <div class="footer section">
        <div class="section-content contact-info">
          <p class="contact-phone-number">
            <a class="contact-link email-link" href="mailto:hello@nilenso.com">hello@nilenso.com</a>
            <a class="contact-link contact-social-link" href="http://twitter.com/nilenso">@nilenso</a>
            <a class="contact-link contact-social-link" href="http://github.com/nilenso">github.com/nilenso</a>
            <a class="contact-link" href="tel:+918042042671">+91 80 4204 2671</a>
            <a class="contact-link" href="http://goo.gl/maps/R6S3O">View Map</a>
           </p>
          <p class="contact-address">Nilenso Software LLP, #147, 10th Cross, Indiranagar Stage 1, Bangalore, India, 560038</p>
        </div>

        <div class="contact-map">
          <iframe width="700" height="250" frameborder="0"
                  scrolling="no" marginheight="0" marginwidth="0"
                  src="http://www.openstreetmap.org/export/embed.html?bbox=77.637371,12.980132,77.641143,12.984167&amp;layer=mapnik&amp;marker=12.98199,77.63883"
                  style="border: 1px solid black"></iframe><br />
          <small>
            <a href="http://www.openstreetmap.org/?lat=12.982149499999998&amp;lon=77.639257&amp;zoom=17&amp;layers=M&amp;mlat=12.98199&amp;mlon=77.63883">View Larger Map</a>
            </small>
        </div>
      </div>

      <div class="copyright">
        <span>&copy; 2013 Nilenso Software LLP</span>
      </div>
    </div>

    <script>
      // Google Analytics
      (function(i, s, o, g, r, a, m) {
        i['GoogleAnalyticsObject'] = r;
        i[r] = i[r] || function() {
          (i[r].q = i[r].q || []).push(arguments)
        }, i[r].l = 1 * new Date();
        a = s.createElement(o),
            m = s.getElementsByTagName(o)[0];
        a.async = 1;
        a.src = g;
        m.parentNode.insertBefore(a, m)
      })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

      ga('create', 'UA-43704022-1', 'nilenso.com');
      ga('send', 'pageview');

      function selectScrollNavSection(event) {
        activeSection = $(event.target).data("section");
        $(".scroll-nav-section[data-nav='" + activeSection + "']").addClass("selected");
      }

      function deSelectScrollNavSection(event) {
        inactiveSection = $(event.target).data("section");
        $(".scroll-nav-section[data-nav='" + inactiveSection + "']").removeClass("selected");
      }

      function setUpScrollNav(numberOfNavItems) {
        var navHeight = $(".scroll-nav").height();
        $(".scroll-nav-section").height(navHeight/numberOfNavItems);
        $(".bordered-section")
          .bind('enterviewport', selectScrollNavSection)
          .bind('leaveviewport', deSelectScrollNavSection)
          .bullseye();
        $(".scroll-nav-section").click(selectScrollNavSection);
      }
      $(document).ready(function(){
        $('.page-links').navobile({
          'content': '.content',
          'cta': '.show-navigation',
          'changeDOM': true
        });
      });
    </script>
  </body>
</html>
