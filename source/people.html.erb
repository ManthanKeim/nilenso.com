---
title: People
---

<div class="people section">
  <h2 class="section-heading">Our Team</h2>

  <% data.people.each do |person| %>
    <div class="portfolio-testimonial section">
      <a href="people.html#<%= person.nick %>" target="_blank">
        <img alt="<%= person.nick %>" class="human" src="<%= person.picture %>"/>
      </a>

      <div class="testimonial-quote-container section-content">
        <p class="people-human-description-links">
          <a class="social-link" href="<%= person.twitter %>"><i class="icon-twitter-sign"></i></a>
          <a class="social-link" href="<%= person.linkedin %>"><i class="icon-linkedin-sign"></i></a>
          <a class="social-link" href="<%= person.github %>"><i class="icon-github-sign"></i></a>
        </p>

        <p class="testimonial-quote-text">
          <%= person.bio %>
        </p>
      </div>
    </div>
  <% end %>
</div>
